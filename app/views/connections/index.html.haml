.page-header
  = link_to new_connection_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Connection
  %h1 Listing connections

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Room
        %th Neighbor
        %th Direction
        %th
        %th
        %th

    %tbody
      - @connections.each do |connection|
        %tr
          %td= connection.room_id
          %td= connection.neighbor_id
          %td= connection.direction
          %td= link_to 'Show', connection
          %td= link_to 'Edit', edit_connection_path(connection)
          %td= link_to 'Destroy', connection, :data => { confirm: 'Are you sure?' }, :method => :delete
