= form_for @connection, :html => { :class => "form-horizontal" } do |f|
  -if @connection.errors.any?
    .alert.alert-danger.alert-dismissable
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %h4= "#{pluralize(@connection.errors.count, "error")} prohibited this connection from being saved:"

      %ul
        - @connection.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :room_id, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.number_field :room_id, :class => 'form-control'
  .form-group
    = f.label :neighbor_id, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.number_field :neighbor_id, :class => 'form-control'
  .form-group
    = f.label :direction, :class => 'col-lg-2 control-label'
    .col-lg-10
      = f.text_field :direction, :class => 'form-control'
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit :class => 'btn btn-primary'
