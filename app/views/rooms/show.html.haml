.page-header
  = link_to rooms_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_room_path(@room), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show room

%dl.dl-horizontal
  %dt Name:
  %dd= @room.name
  %dt Description:
  %dd= @room.description
  %dt World:
  %dd= @room.world

%hr

%h2 Neighbors
%dl.dl-horizontal
  - @room.connections.each do |connection|
    %dt #{connection.direction.titlecase}:
    %dd= link_to connection.neighbor.name, room_path(connection.neighbor)
