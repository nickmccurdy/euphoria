!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title Euphoria
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top
      .navbar-header
        %a.btn.btn-navbar{:data => {:toggle => "collapse", :target => ".nav-collapse"} }
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to "Euphoria", "#", :class => "navbar-brand"
      .navbar-collapse.collapse
        %ul.nav.navbar-nav
          %li.active= link_to 'Home', page_path('home')
          %li= link_to 'Worlds', worlds_path
          %li= link_to 'Rooms', rooms_path
          %li= link_to 'Items', items_path
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li= link_to "Profile", edit_user_registration_path
            %li= link_to "Log out", destroy_user_session_path
          - else
            %li= link_to 'Sign up', new_user_registration_path
            %li= link_to 'Log in', new_user_session_path
    .container
      - flash.each do |name, msg|
        = content_tag :div, :class => "alert #{name == :error ? "alert-error" : "alert-success" }" do
          %a.close{:href => "#", :data => {:dismiss => "alert"} } Ã—
          = msg
      = yield
      %hr
      %footer
        %p &copy; Company 2012
