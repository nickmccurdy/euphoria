!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title Euphoria
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-static-top
      .navbar-header
        %a.btn.btn-navbar{:data => {:toggle => "collapse", :target => ".nav-collapse"} }
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to "Euphoria", root_path, :class => "navbar-brand"
      .navbar-collapse.collapse
        %ul.nav.navbar-nav
          %li{class: ('active' if controller? 'worlds')}= link_to 'Worlds', worlds_path
          %li{class: ('active' if controller? 'rooms')}= link_to 'Rooms', rooms_path
          %li{class: ('active' if controller? 'items')}= link_to 'Items', items_path
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li{class: ('active' if controller? 'registrations')}
              = link_to edit_user_registration_path do
                = image_tag Gravatar.new(current_user.email).image_url, size: '16', alt: 'Avatar'
                = current_user.email
            %li{class: ('active' if controller? 'sessions')}= link_to "Log out", destroy_user_session_path
          - else
            %li{class: ('active' if controller? 'registrations')}= link_to 'Sign up', new_user_registration_path
            %li{class: ('active' if controller? 'sessions')}= link_to 'Log in', new_user_session_path
    .container
      - flash.each do |name, msg|
        = content_tag :div, :class => "alert #{name == :error ? "alert-error" : "alert-success" }" do
          %a.close{:href => "#", :data => {:dismiss => "alert"} } Ã—
          = msg
      = yield
      %hr
      %footer
        %p
          &copy;
          = link_to 'Nicolas McCurdy', 'http://thenickperson.com', target: '_blank'
          2013
